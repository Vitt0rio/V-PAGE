---
import { ViewTransitions } from 'astro:transitions';
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{title}</title>

<!-- ðŸ”µ Activa navegaciÃ³n tipo SPA -->
<ViewTransitions />

<!-- Fuente Inter -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

:root {
  --bg: #0b0b0b;
  --bg-secondary: #151515;
  --text: #f5f5f5;
  --text-light: #9a9a9a;
  --border: #222;
  --accent: #ffffff;
}

body {
  font-family: 'Inter', sans-serif;
  background: radial-gradient(circle at top, #111 0%, #0b0b0b 60%);
  color: var(--text);
  line-height: 1.6;
  min-height: 100vh;
  display: flex;
  justify-content: center;
}

.container {
  width: 100%;
  max-width: 1150px;
  padding: 90px 50px;
}

/* ===== LINKS ===== */

a {
  text-decoration: none;
  color: inherit;
}

/* ===== GRID ===== */

.entries-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
  gap: 32px;
}

.entry-card {
  background: var(--bg-secondary);
  border: 1px solid var(--border);
  padding: 36px;
  transition: all 0.3s ease;
  position: relative;
  border-radius: 8px;
}

.entry-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 2px;
  background: var(--accent);
  transform: scaleY(0);
  transform-origin: top;
  transition: transform 0.3s ease;
}

.entry-card:hover {
  border-color: #333;
  transform: translateY(-8px);
  background: #1b1b1b;
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
}

.entry-card:hover::before {
  transform: scaleY(1);
}

.entry-date {
  font-size: 0.75em;
  color: var(--text-light);
  margin-bottom: 12px;
  letter-spacing: 0.6px;
  text-transform: uppercase;
}

.entry-title {
  font-size: 1.25em;
  font-weight: 600;
  margin-bottom: 16px;
  line-height: 1.35;
}

.entry-preview {
  font-size: 0.95em;
  color: var(--text-light);
  line-height: 1.7;
}

/* ===== POST PAGE ===== */

.post-container {
  max-width: 850px;
  margin: 0 auto;
}

.post-header {
  margin-bottom: 80px;
  padding-bottom: 35px;
  border-bottom: 1px solid var(--border);
}

.post-date {
  font-size: 0.75em;
  color: var(--text-light);
  margin-bottom: 18px;
  letter-spacing: 0.6px;
  text-transform: uppercase;
}

.post-title {
  font-size: 2.8em;
  font-weight: 700;
  line-height: 1.2;
  letter-spacing: -0.6px;
}

.post-content {
  font-size: 1.12rem;
  line-height: 2;
  color: var(--text);
}

.post-content p {
  margin-bottom: 30px;
}

.post-content h2 {
  margin-top: 70px;
  margin-bottom: 20px;
  font-size: 1.5em;
  font-weight: 600;
}

.post-content strong {
  color: var(--accent);
}

.post-content img {
  max-width: 100%;
  margin: 50px 0;
  border-radius: 8px;
  border: 1px solid var(--border);
}

.post-content a {
  border-bottom: 1px solid var(--border);
  transition: 0.2s ease;
}

.post-content a:hover {
  border-color: var(--accent);
}

hr {
  border: none;
  border-top: 1px solid var(--border);
  margin: 70px 0;
}
</style>
</head>

<body>
  <div class="container">
    <slot />
  </div>
</body>
</html>
