---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
posts.sort((a, b) => new Date(b.data.date) - new Date(a.data.date));
---

<BaseLayout title="V">

  <header class="blog-header">

    <img src="/logo.png" alt="V logo" class="blog-logo" />


  </header>

  <section class="blog-grid">
    {posts.map(post => (
      <a href={`/blog/${post.slug}`} class="card-link">
        <div class="blog-card">

          <div class="card-top">
            <span class="card-date">
              {post.data.date.toDateString()}
            </span>
          </div>

          <h2 class="card-title">
            {post.data.title}
          </h2>

          <p class="card-preview">
            {post.body?.slice(0, 130)}...

          </p>

        </div>
      </a>
    ))}
  </section>

  <style>
    .blog-header {
      margin-bottom: 95px;
      text-align: center;
    }

    /* ðŸ”µ LOGO GRANDE Y BLANCO */
    .blog-logo {
      width: 160px; /* ðŸ”¥ mÃ¡s grande */
      height: auto;
      display: block;
      margin: 0 auto;
      filter: invert(1); /* ðŸ”¥ convierte negro a blanco */
      opacity: 0.95;
      transition: transform 0.3s ease, opacity 0.3s ease;
    }

    .blog-logo:hover {
      transform: translateY(-4px);
      opacity: 1;
    }

    .blog-sub {
      color: var(--text-light);
      font-size: 0.75em;
      letter-spacing: 2px;
      margin-top: 20px;
      opacity: 0.7;
    }

    .blog-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 32px;
    }

    .card-link {
      text-decoration: none;
      color: inherit;
      display: block;
    }

    .blog-card {
      background: var(--bg-secondary);
      border: 1px solid var(--border);
      padding: 34px;
      transition: transform 0.35s ease, border-color 0.35s ease;
      position: relative;
      min-height: 220px;
      display: flex;
      flex-direction: column;
    }

    .blog-card::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      width: 2px;
      height: 100%;
      background: var(--accent);
      transform: scaleY(0);
      transform-origin: top;
      transition: transform 0.35s ease;
    }

    .blog-card:hover {
      border-color: rgba(255,255,255,0.2);
      transform: translateY(-4px);
    }

    .blog-card:hover::before {
      transform: scaleY(1);
    }

    .card-date {
      font-size: 0.7em;
      color: var(--text-light);
      letter-spacing: 1px;
      text-transform: uppercase;
      opacity: 0.6;
    }

    .card-title {
      font-size: 1.2em;
      margin: 18px 0 14px 0;
      font-weight: 600;
      line-height: 1.4;
      transition: transform 0.25s ease;
    }

    .card-link:hover .card-title {
      transform: translateX(4px);
    }

    .card-preview {
      font-size: 0.9em;
      color: var(--text-light);
      line-height: 1.7;
      opacity: 0.75;
      flex-grow: 1;
      transition: opacity 0.25s ease;
    }

    .card-link:hover .card-preview {
      opacity: 0.95;
    }
  </style>

</BaseLayout>
