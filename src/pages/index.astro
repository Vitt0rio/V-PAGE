---
import BaseLayout from '/src/layouts/BaseLayout.astro';
---

<BaseLayout title="V">

  <div class="home-screen">
    <div class="home-box">

      <!-- âš¡ BORDE ELÃ‰CTRICO (SE MANTIENE) -->
      <svg class="electric-border" viewBox="0 0 100 100" preserveAspectRatio="none">
        <rect x="0" y="0" width="100" height="100" class="electric-base" />
        <rect x="0" y="0" width="100" height="100" class="electric-anim" />
      </svg>

      <!-- ðŸ”¥ LOGO EN VEZ DE TEXTO -->
      <img src="/logo.png" alt="V logo" class="home-logo" />

      <div class="home-actions">
        <a href="/blog" class="home-button">
          Entrar
        </a>
      </div>

    </div>
  </div>

  <style>
    .home-screen {
      height: 80vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .home-box {
      position: relative;
      background: var(--bg-secondary);
      padding: 120px 150px;
      text-align: center;
      border: none;
      overflow: hidden;
      transition: transform 0.4s ease;
    }

    .home-box:hover {
      transform: translateY(-6px);
    }

    /* âš¡ BORDE SVG (SE MANTIENE) */

    .electric-border {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
    }

    .electric-base {
      fill: none;
      stroke: rgba(255,255,255,0.25);
      stroke-width: 1;
    }

    .electric-anim {
      fill: none;
      stroke: white;
      stroke-width: 1;
      stroke-dasharray: 400;
      stroke-dashoffset: 400;
      filter: drop-shadow(0 0 6px white);
      opacity: 0;
    }

    @keyframes electric-flow {
      0% {
        stroke-dashoffset: 400;
        opacity: 0;
      }
      20% {
        opacity: 1;
      }
      60% {
        stroke-dashoffset: 0;
        opacity: 1;
      }
      100% {
        stroke-dashoffset: 0;
        opacity: 1;
      }
    }

    .home-box:hover .electric-anim {
      animation: electric-flow 1.1s ease forwards;
    }

    /* ðŸ”¥ LOGO GRANDE Y BLANCO */

    .home-logo {
      width: 240px;
      height: auto;
      display: block;
      margin: 0 auto 60px auto;
      filter: invert(1);
      opacity: 0.95;
      transition: transform 0.3s ease;
      position: relative;
      z-index: 2;
    }

    .home-logo:hover {
      transform: translateY(-4px);
    }

    .home-actions {
      margin-top: 10px;
      position: relative;
      z-index: 2;
    }

    .home-button {
      display: inline-block;
      padding: 16px 60px;
      border: 1px solid var(--border);
      color: var(--text) !important;
      background: transparent;
      font-size: 0.9em;
      letter-spacing: 2px;
      transition: all 0.3s ease;
      text-decoration: none !important;
    }

    .home-button:hover {
      border-color: var(--accent);
      transform: translateY(-4px);
      background: #1b1b1b;
    }
  </style>

</BaseLayout>
