---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const { slug } = Astro.params;

const posts = await getCollection('blog');
const post = posts.find((p) => p.slug === slug);

if (!post) {
  throw new Error("Post no encontrado");
}

const { Content } = await post.render();
---

<BaseLayout title={post.data.title}>

  <div class="post-wrapper">

    <article class="post-main">
      <h1 class="post-title">{post.data.title}</h1>
      <div class="post-date">{post.data.date.toDateString()}</div>

      <div class="post-content">
        <Content />
      </div>
    </article>

    <aside class="comments-section">
      <h2>Comentarios</h2>

      <div id="comments-list"></div>

      <form id="comment-form">
        <input type="text" id="comment-name" placeholder="Nombre (opcional)" />
        <textarea id="comment-content" placeholder="Escribe tu comentario..." required></textarea>
        <button type="submit">Publicar</button>
      </form>
    </aside>

  </div>

  <style>
    .post-wrapper {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 60px;
      max-width: 1200px;
      margin: 80px auto;
      padding: 0 40px;
    }

    .post-main {
      max-width: 700px;
    }

    .post-date {
      font-size: 0.8em;
      color: var(--text-light);
      margin-bottom: 40px;
    }

    .comments-section {
      border-left: 1px solid var(--border);
      padding-left: 30px;
    }

    @media (max-width: 900px) {
      .post-wrapper {
        grid-template-columns: 1fr;
      }

      .comments-section {
        border-left: none;
        border-top: 1px solid var(--border);
        padding-left: 0;
        padding-top: 30px;
      }
    }
  </style>

  <script>
    const slug = "{slug}";

    async function loadComments() {
      const res = await fetch(`/api/comments?slug=${slug}`);
      const comments = await res.json();

      const container = document.getElementById("comments-list");
      container.innerHTML = "";

      comments.forEach((c) => {
        const div = document.createElement("div");
        div.style.marginBottom = "20px";
        div.innerHTML = `
          <strong>${c.name}</strong>
          <p>${c.content}</p>
          <small style="color: gray">${new Date(c.created_at).toLocaleString()}</small>
        `;
        container.appendChild(div);
      });
    }

    document.getElementById("comment-form").addEventListener("submit", async (e) => {
      e.preventDefault();

      const name = document.getElementById("comment-name").value;
      const content = document.getElementById("comment-content").value;

      await fetch("/api/comments", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          post_slug: slug,
          name,
          content,
        }),
      });

      document.getElementById("comment-content").value = "";
      loadComments();
    });

    loadComments();
  </script>

</BaseLayout>
