---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const { slug } = Astro.params;

const posts = await getCollection('blog');
const post = posts.find((p) => p.slug === slug);

if (!post) throw new Error("Post no encontrado");

const { Content } = await post.render();
---

<BaseLayout title={post.data.title}>

  <!-- CONTENIDO -->
  <div class="post-container">
    <h1 class="post-title">{post.data.title}</h1>
    <div class="post-date">{post.data.date.toDateString()}</div>

    <div class="post-content">
      <Content />
    </div>
  </div>

  <!-- BOT√ìN ABRIR -->
  <button class="comments-toggle" id="openComments">
    Comentarios
  </button>

  <div class="overlay" id="overlay"></div>

  <!-- PANEL LATERAL -->
  <aside class="comments-panel" id="commentsPanel">

    <div class="panel-header">
      <span>Comentarios</span>
      <button id="closeComments">√ó</button>
    </div>

    <!-- üîê PANEL ADMIN -->
    <div class="admin-panel">
      <input
        type="password"
        id="admin-code"
        placeholder="C√≥digo admin"
      />
    </div>

    <!-- FORMULARIO -->
    <form id="comment-form" class="comment-form">
      <textarea
        id="comment-content"
        placeholder="Agrega un comentario..."
        required
      ></textarea>

      <div class="form-bottom">
        <input
          type="text"
          id="comment-name"
          placeholder="Nombre (opcional)"
        />
        <button type="submit" class="submit-btn">Enviar</button>
      </div>
    </form>

    <div id="comments-list" class="comments-list"></div>

  </aside>

  <style>
    .post-container {
      max-width: 900px;
      margin: 140px auto;
      padding: 0 40px;
      line-height: 2;
    }

    .post-date {
      font-size: 0.75em;
      color: #555;
      margin-bottom: 40px;
    }

    .comments-toggle {
      position: fixed;
      bottom: 40px;
      right: 40px;
      background: white;
      color: black;
      border: none;
      padding: 10px 20px;
      border-radius: 40px;
      font-size: 0.75em;
      cursor: pointer;
      transition: 0.25s;
      z-index: 1000;
    }

    .overlay {
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.6);
      backdrop-filter: blur(4px);
      opacity: 0;
      pointer-events: none;
      transition: 0.3s;
      z-index: 1001;
    }

    .overlay.active {
      opacity: 1;
      pointer-events: all;
    }

    .comments-panel {
      position: fixed;
      top: 0;
      right: 0;
      width: 460px;
      height: 100vh;
      background: #0c0c0c;
      border-left: 1px solid #1e1e1e;
      transform: translateX(100%);
      transition: 0.35s cubic-bezier(.22,.61,.36,1);
      padding: 40px;
      display: flex;
      flex-direction: column;
      z-index: 1002;
    }

    .comments-panel.active {
      transform: translateX(0);
    }

    .panel-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.7em;
      letter-spacing: 3px;
      text-transform: uppercase;
      color: #666;
      margin-bottom: 20px;
    }

    .panel-header button {
      background: none;
      border: none;
      color: white;
      font-size: 1.2em;
      cursor: pointer;
    }

    /* üîê ADMIN */

    .admin-panel {
      margin-bottom: 20px;
    }

    .admin-panel input {
      width: 100%;
      background: transparent;
      border: none;
      border-bottom: 1px solid #222;
      padding: 6px 0;
      color: #888;
      font-size: 0.7em;
    }

    .admin-panel input:focus {
      outline: none;
      border-color: white;
    }

    /* FORM */

    .comment-form textarea {
      width: 100%;
      background: transparent;
      border: none;
      border-bottom: 1px solid #222;
      padding: 10px 0;
      color: white;
      resize: none;
      font-size: 0.85em;
    }

    .comment-form textarea:focus {
      outline: none;
      border-color: white;
    }

    .form-bottom {
      display: flex;
      justify-content: space-between;
      margin-top: 10px;
    }

    .form-bottom input {
      background: transparent;
      border: none;
      border-bottom: 1px solid #222;
      padding: 6px 0;
      color: #aaa;
      font-size: 0.75em;
      width: 60%;
    }

    .submit-btn {
      background: transparent;
      border: 1px solid white;
      color: white;
      padding: 6px 14px;
      font-size: 0.7em;
      cursor: pointer;
      transition: 0.25s;
    }

    .submit-btn:hover {
      background: white;
      color: black;
    }

    /* COMENTARIOS */

    .comments-list {
      margin-top: 30px;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
      gap: 26px;
      flex: 1;
    }

    .comment-item {
      display: flex;
      flex-direction: column;
      gap: 6px;
    }

    .comment-name {
      font-size: 0.82em;
      font-weight: 600;
      color: #f0f0f0;
    }

    .comment-text {
      font-size: 0.85em;
      font-style: italic;
      line-height: 1.7;
      color: #d6d6d6;
      white-space: pre-wrap;
    }

    /* FECHA DEBAJO ‚Äî MITAD DEL TAMA√ëO */

    .comment-date {
      font-size: 0.42em;
      color: #444;
      margin-top: 4px;
    }

    .delete-btn {
      font-size: 0.6em;
      color: #555;
      cursor: pointer;
      margin-top: 4px;
      display: none;
    }

    .delete-btn:hover {
      color: #ff4d4d;
    }

    @media (max-width: 600px) {
      .comments-panel {
        width: 100%;
      }
    }
  </style>

  <script>
    const slug = "{slug}";
    const panel = document.getElementById("commentsPanel");
    const overlay = document.getElementById("overlay");
    const adminInput = document.getElementById("admin-code");

    let isAdmin = false;

    document.getElementById("openComments").onclick = () => {
      panel.classList.add("active");
      overlay.classList.add("active");
    };

    document.getElementById("closeComments").onclick = closePanel;
    overlay.onclick = closePanel;

    function closePanel() {
      panel.classList.remove("active");
      overlay.classList.remove("active");
    }

    adminInput.addEventListener("input", () => {
      isAdmin = adminInput.value === "0000";
      loadComments();
    });

    async function loadComments() {
      const res = await fetch(`/api/comments?slug=${slug}`);
      const comments = await res.json();

      const container = document.getElementById("comments-list");
      container.innerHTML = "";

      comments.forEach((c) => {
        const div = document.createElement("div");
        div.classList.add("comment-item");

        div.innerHTML = `
          <div class="comment-name">${c.name || "An√≥nimo"}</div>
          <div class="comment-text">${c.content}</div>
          <div class="comment-date">
            ${new Date(c.created_at).toLocaleDateString()}
          </div>
          ${isAdmin ? `<div class="delete-btn" data-id="${c.id}">Eliminar</div>` : ""}
        `;

        container.appendChild(div);
      });
    }

    document.addEventListener("click", async (e) => {
      if (e.target.classList.contains("delete-btn")) {
        const id = e.target.getAttribute("data-id");

        await fetch("/api/comments", {
          method: "DELETE",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ id }),
        });

        loadComments();
      }
    });

    document.getElementById("comment-form").addEventListener("submit", async (e) => {
      e.preventDefault();

      const name = document.getElementById("comment-name").value || "An√≥nimo";
      const content = document.getElementById("comment-content").value;

      if (!content.trim()) return;

      await fetch("/api/comments", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          post_slug: slug,
          name,
          content,
        }),
      });

      document.getElementById("comment-content").value = "";
      loadComments();
    });

    loadComments();
  </script>

</BaseLayout>
